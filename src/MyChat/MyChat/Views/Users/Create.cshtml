@model MyChat.UserControlViews.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="Create" asp-controller="Users" >
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Login"></label><br />
        <input asp-for="Login" class = "form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input type="password" asp-for="Password" class = "form-control"/>
    </div>
    <div class="form-group">
        <br/>
        <input type="submit" class="btn btn-outline-secondary" value = "Add"/>
    </div>
</form>