@model MyChat.Models.Room
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>
    <span style="background-color:slategrey; color: whitesmoke">
        @User.Identity.Name
    </span>, welcome to the room "
    <span style="background-color:slategrey; color: whitesmoke">
        @Model.Name
    </span>"
</h2>

<div class="chat-body">
    @foreach (var message in @Model.Messages)
    {
        <div class="message">
            <header>@message.Name:</header>
            <p>@message.Text</p>
            <footer>@message.When</footer>
        </div>
    }
</div>
<form asp-action="Send" method="post" asp-controller="Rooms">
    <div class="chat-input">
        <input type="hidden" name="roomId" value="@Model.Id">
        <input type="text" name="message" required="required">
        <button type="submit" >Send</button>
    </div>
</form>
