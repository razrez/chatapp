@model Message
@{
    ViewData["Title"] = "Chat Page";
    var messages = ViewData["messages"];
}

<form method="post" asp-controller="Chat" asp-action="Send">
    <input type="hidden" asp-for="UserName" value="@User.Identity.Name" id="userInput" />
    <div class="form-group">
        <label asp-for="Text">Message</label><br/>
        <input asp-for="Text" class="form-control" type="text" id="messageInput"/>
    </div>
    <div class="form-group">
        <input type="submit" id="sendButton" value="Send Message" class="btn btn-primary"/>
    </div>
</form>

<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>